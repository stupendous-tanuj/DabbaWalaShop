<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_235"
        android:layout_height="@dimen/dp_235"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        android:scaleType="centerCrop"
        android:src="@drawable/icon"
         />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@color/color_base"
        android:textSize="@dimen/sp_40"
        android:layout_below="@id/iv_icon"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="@dimen/dp_2"
        android:gravity="left"
        android:text="@string/label_line1"
        android:textColor="@color/color_base"
        android:textSize="@dimen/sp_13"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tt"
        android:layout_alignRight="@+id/tt"
        android:layout_below="@+id/tt"
        android:layout_marginTop="@dimen/dp_2"
        android:gravity="left"
        android:text="@string/label_line2"
        android:textColor="@color/color_base"
        android:textSize="@dimen/sp_10"
        android:textStyle="italic" />

</RelativeLayout>